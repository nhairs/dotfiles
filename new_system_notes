# Set sane defaults
sudo cat > /etc/docker/daemon.json <<EOT
{
  "log-driver": "json-file",
  "log-opts": {
    "max-size": "50m",
    "max-file": "3"
  },
  "default-address-pools" : [
      {
          "scope": "global",
          "base": "192.168.128.0/20",
          "size": 26
      }
  ]
}
EOT


# Golang
# https://go.dev/doc/install
